<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    tools:context=".HomeActivityTwitter">
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/userimaget">
    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userimaget"
        android:id="@+id/usernamet">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_below="@+id/usernamet"
        android:layout_height="wrap_content"
        android:id="@+id/useremailt">
    </TextView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logoutbuttont"
        android:text="LogOut"
        android:layout_below="@+id/useremailt">
    </Button>

</RelativeLayout>